{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "jc-blocks/simple-blurb",
	"version": "0.1.0",
	"title": "Simple Blurb",
	"category": "text",
	"description": "Adds a simple blurb (image + title + short piece of text).",
	"keywords": [ "image", "text", "blurb" ],
	"textdomain": "jc-simple-blurb",
	"attributes": {
		"imageId": {
			"type": "number"
		},
		"imageUrl": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "src"
		},
		"alt": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "alt",
			"default": ""
		},
		"width": {
			"type": "number"
		},
		"height": {
			"type": "number"
		},
		"href": {
			"type": "string",
			"source": "attribute",
			"selector": "jc-blurb-image>a",
			"attribute": "alt",
			"default": ""
		},
		"contentAlign": {
			"type": "string",
			"default": "center"
		},
		"imageAlign": {
			"type": "string",
			"default": "center"
		},
		"allowBlocks": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"align": ["wide"],
		"color": {
			"__experimentalSkipSerialization": true,
			"gradients": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"html": false
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}