{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "jc-blocks/simple-blurb",
	"version": "0.1.0",
	"title": "Simple Blurb",
	"category": "text",
	"description": "Adds a simple blurb (image + title + short piece of text).",
	"keywords": [ "image", "text", "blurb" ],
	"textdomain": "jc-simple-blurb",
	"attributes": {
		"image_id": {
			"type": "number"
		},
		"image_url": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "src"
		},
		"image_alt": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "alt",
			"default": ""
		},
		"width": {
			"type": "number"
		},
		"height": {
			"type": "number"
		},
		"image_href": {
			"type": "string",
			"source": "attribute",
			"selector": "jc-blurb-image>a",
			"attribute": "alt",
			"default": ""
		},
		"title": {
			"type": "string",
			"source": "html",
			"selector": "h4"
		},
		"content": {
			"type": "string",
			"source": "html",
			"selector": "p"
		}
	},
	"supports": {
		"html": false
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}